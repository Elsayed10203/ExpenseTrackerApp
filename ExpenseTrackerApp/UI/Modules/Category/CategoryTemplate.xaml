<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ExpenseTrackerApp.UI.Modules.Category.CategoryTemplate"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:catg="clr-namespace:ExpenseTrackerApp.UI.Modules.Category">
    <Border
        Margin="5"
        Padding="10"
        x:DataType="catg:CategoryUiModel"
        BackgroundColor="{Binding BackColor}"
        HorizontalOptions="FillAndExpand"
        StrokeShape="RoundRectangle 10"
        StrokeThickness="0"
        VerticalOptions="FillAndExpand">


        <Border.Triggers>

            <DataTrigger
                Binding="{Binding IsSelected}"
                TargetType="Border"
                Value="True">

                <Setter Property="Stroke" Value="{StaticResource Gray600}" />
                <Setter Property="StrokeThickness" Value="3" />
            </DataTrigger>
            <DataTrigger
                Binding="{Binding IsSelected}"
                TargetType="Border"
                Value="False">
                <Setter Property="Stroke" Value="Transparent" />
                <Setter Property="StrokeThickness" Value="0" />
            </DataTrigger>
        </Border.Triggers>

        <VerticalStackLayout
            HorizontalOptions="Center"
            Spacing="5"
            VerticalOptions="Center">

            <Image HeightRequest="40">
                <Image.Source>
                    <FontImageSource
                        FontFamily="FAPL"
                        Glyph="{Binding Icon}"
                        Size="30"
                        Color="{StaticResource White}" />
                </Image.Source>
            </Image>

            <!--  Category Name  -->
            <Label
                FontAttributes="Bold"
                FontSize="14"
                HorizontalTextAlignment="Center"
                Text="{Binding Name}"
                TextColor="White" />
        </VerticalStackLayout>
    </Border>

</ContentView>
